---
import { useTranslations } from "../../i18n/utils";
import { lenguageList } from "../../i18n/ui";
import Card from "../../components/CardProjects.astro";
import { projects } from "../../helpers/data";

const currentLang = Astro.currentLocale || "es";
const translate = useTranslations(currentLang as keyof typeof lenguageList);
---

<div
  class="home flex flex-col items-center justify-center gap-6 w-full h-auto py-16"
>
  <p class="text-xl sm:text-2xl md:text-3xl font-semibold w-full text-center">
    {translate("home.projects")}
  </p>

<div
  class="flex flex-col lg:flex-row justify-center gap-6 mt-6
         w-[90vw] lg:w-[50vw] mx-auto"
>
  {projects.map((project) => (
    <Card data={project} t={translate} />
  ))}
</div>

</div>
